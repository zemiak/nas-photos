<document>
    <stackTemplate id="template-data" data-template="Folders" data-folder="{{&mainFolder}}">
        <banner>
            <title>{{title}}</title>
        </banner>

        <collectionList><grid>
            <section>
                {{#folders}}
                    <lockup action="{{&action}}">
                        <img src="{{&src}}" width="{{width}}" height="{{height}}" />
                        <title>{{title}}</title>
                    </lockup>
                {{/folders}}

                {{#photos}}
                    <lockup action="{{&action}}">
                        <img src="{{&src}}" width="{{width}}" height="{{height}}" />
                    </lockup>
                {{/photos}}

                {{#movies}}
                    <lockup action="{{&action}}">
                        <img src="{{&src}}" width="{{width}}" height="{{height}}" />
                    </lockup>
                {{/movies}}

                {{#livePhotos}}
                    <lockup action="{{&action}}">
                        <img src="{{&src}}" width="{{width}}" height="{{height}}" />
                    </lockup>
                {{/livePhotos}}
            </section>
        </grid></collectionList>
    </stackTemplate>
</document>
